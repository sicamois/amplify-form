{
  "name": "amplify-form",
  "description": "Create Form for your GaphQL API in Amplify",
  "author": "Pierre-olivier Sicamois",
  "keywords": [
    "react",
    "component",
    "form",
    "amplify",
    "aws-amplify",
    "graphQL",
    "graph-ql",
    "aws",
    "react-component",
    "ui",
    "typescript"
  ],
  "version": "1.0.9",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/amplify-form.esm.js",
  "license": "MIT",
  "files": [
    "README.md",
    "dist"
  ],
  "sideEffects": true,
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sicamois/amplify-form.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "fix-tags": "git fetch --tags -f",
    "format": "prettier --write .",
    "preci": "rm -fr node_modules",
    "ci": "yarn install --immutable --immutable-cache --check-cache",
    "test": "jest",
    "test-cov": "jest --coverage && coveralls < coverage/lcov.info",
    "test-build": "yarn build && yarn test-cov",
    "build": "rm -r -f dist && yarn build:tsdx",
    "build:tsdx": "tsdx build --format cjs,esm --tsconfig tsconfig.tsdx.json",
    "publish-push": "npm publish && git push --quiet",
    "publish-beta": "yarn test-build && npm version prerelease --preid=beta &&  npm publish --tag=beta && git push --quiet",
    "publish-patch": "yarn test-build && npm version patch && yarn publish-push",
    "publish-minor": "yarn test-build && npm version minor && yarn publish-push",
    "publish-major": "yarn test-build && npm version major && yarn publish-push",
    "login-npm": "npm adduser",
    "prepare": "husky install"
  },
  "dependencies": {
    "chroma-js": "^2.1.2",
    "formik": "^2.2.9",
    "lodash": "^4.17.21",
    "react-dropzone": "^11.4.2",
    "react-select": "^5.2.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/chroma-js": "^2.1.3",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.1",
    "@types/react": "^17.0.37",
    "@types/react-test-renderer": "^17.0.1",
    "autoprefixer": "^10.4.0",
    "aws-amplify": "^4.3.11",
    "coveralls": "^3.1.1",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-jest-dom": "latest",
    "eslint-plugin-testing-library": "latest",
    "husky": "latest",
    "jest": "^27.4.5",
    "lint-staged": "latest",
    "next": "^12.0.7",
    "node-notifier": "^10.0.0",
    "postcss": "^8.4.5",
    "prettier": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "tailwindcss": "^3.0.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsdx": "^0.14.1",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "aws-amplify": ">= 4.3.0",
    "react": ">= 17",
    "react-dom": ">= 17"
  }
}
