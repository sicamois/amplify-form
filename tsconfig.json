{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["dom", "ESNext"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.config.ts",
    "__test__/**/*.ts",
    "__test__/**/*.tsx",
    "__test__/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
