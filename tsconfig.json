{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": ["dom", "ESNext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": false,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "jest.config.ts", "__test__/**/*.ts", "__test__/**/*.tsx"],
  "exclude": ["node_modules"]
}
